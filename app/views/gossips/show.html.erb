<!-- Bandeau d'alerte -->

<!-- Bandeau supérieur -->
  <div class=" p-1 mt-1 bg-secondary text-white">
      <div class="row text-left">
          <div class="col-12">
              <h3 class="section-title text-center">Détails concenrant le potin n° <%= @gossip.id%> </h3>
          </div>
      </div>
  </div>

<!-- Affichage du potin -->
<section class="white-wrapper">
  <div class="section-inner">
      <div class="container">
          <div class="row">
              <div class="col-sm-10 col-sm-offset-1">
                  <div class="row post-list my-5">
                      <div class="col-xs-12 blog-caption pure-white-wrapper">
                          <h4 class="mb-2"> <%= @gossip.title%> </h4>
                          <p> <%= @gossip.content%> </p>
                          <p class="mb-0"><small>
                          Create by : <a class="text-decoration-none" href="<%= user_path(@gossip.user.id) %>"><%= @gossip.user.first_name%> <%= @gossip.user.last_name%></a> 
                          from <a class="text-decoration-none" href="<%= city_path(@gossip.user.city.id) %>"><%= @gossip.user.city.city_name%></a>
                          </small></p> 
                          <p class="mt-0"><small>Creation date : <%= @gossip.created_at%></small></p> 
                          <p class="mt-0"><small>Tags : 
                            <% @gossip.tags.each do |tag| %>
                            | <%= tag.content%> |
                            <% end %>
                          </small></p> 
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>

<!-- Affichage des commentaires-->
<ul  class="list-grou mx-2">
  <li class="list-group-item flex-column bg-light "> 
  <!-- Formulaire -->
    <%= form_tag url_for(action: 'create', controller: 'comments'), method: "post", :class => 'form-inline' do %>
      <%= label_tag 'Ajouter un commentaire',nil, class: 'font-weight-bold' %>
      <%= text_field_tag 'new_comment[content]', nil ,class: 'ml-2 form-control w-50'%>
      <%= hidden_field_tag 'new_comment[gossip_id]', params[:id] %>
      <br /> <br />
      <!-- L'auteur est renseigné dans le create -->
      <%= submit_tag "Envoi", class: 'btn btn-success' %>
    <% end %>
  </li>
  <%@gossip.comments.order(updated_at: :desc).each do |comment|%>
    <li class="list-group-item flex-column align-items-start">
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">
                <a class="text-decoration-none" href="<%= user_path(comment.user.id) %>"><%= comment.user.first_name%> <%= comment.user.last_name%> </a>
                from <a class="text-decoration-none" href="<%= city_path(comment.user.city.id) %>"><%= comment.user.city.city_name%></a>
            </h5>
            <small><%= time_ago_in_words(comment.updated_at, include_seconds: true) %></small>
        </div>
        <p class="mb-1"><%= comment.content %></p>
    </li>
  <%end%>
</ul>

<div class="my-5">